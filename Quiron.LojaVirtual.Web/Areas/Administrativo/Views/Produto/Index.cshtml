@model IEnumerable<Quiron.LojaVirtual.Dominio.Entidades.Produto>

@{
    ViewBag.Title = "Administrativo - Produtos";
    Layout = "~/Areas/Administrativo/Views/Shared/_AdministrativoLayout.cshtml";
}

<div id="divexcluir"></div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Quiron Loja Virtual - Administrivo - Produtos</h3>
    </div>
    
    <div class="panel-body">

        @Html.ActionLink("Novo produto", "NovoProduto", "Produto", new { @class = "btn btn-default" })

        @if (Request.IsAuthenticated)
        {
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="icon-user">
                </i>Olá, @User.Identity.Name
            </a>

            @Html.ActionLink("Logout", "Logout", "Produto")
        }

        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">#Id</th>
                    <th>Nome</th>
                    <th class="text-right">Preço</th>
                    <th class="text-center">Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.ProdutoId">

                        <td class="text-right">
                            # @item.ProdutoId
                        </td>
                        <td>
                            @Html.ActionLink(item.Nome, "Alterar", new { item.ProdutoId })
                        </td>
                        <td class="text-right">
                            @item.Preco.ToString("c")
                        </td>
                        <td class="text-center">
                            <input type="button" class="btn btn-default btn-xs" id="@item.ProdutoId" name="@item.Nome" value="Excluir" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("Confirmacao")